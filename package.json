{
  "name": "wenyan-mcp",
  "version": "0.1.0",
  "description": "MCP server for Wenyan, a Markdown formatting tool that allows AI assistants to apply elegant built-in themes and publish articles directly to 微信公众号.",
  "private": true,
  "type": "module",
  "bin": {
    "wenyan-mcp": "./dist/index.js",
    "wenyan-api": "./dist/api-cli.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc -b && npm run copy-assets",
    "copy-assets": "node scripts/copy-assets.js",
    "watch": "tsc --watch",
    "inspector": "pnpx @modelcontextprotocol/inspector",
    "test": "pnpx vitest run",
    "api": "tsc -b && npm run copy-assets && node dist/api-cli.js",
    "test-page": "node dist/test-cli.js"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "0.6.0",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "css-tree": "^3.1.0",
    "express": "^4.19.2",
    "formdata-node": "^6.0.3",
    "front-matter": "^4.0.2",
    "highlight.js": "^11.11.1",
    "jsdom": "^26.1.0",
    "marked": "^15.0.12",
    "marked-highlight": "^2.2.1",
    "mathjax-full": "^3.2.2"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/css-tree": "^2.3.10",
    "@types/express": "^4.17.21",
    "@types/jsdom": "^21.1.7",
    "@types/node": "^20.11.24",
    "typescript": "^5.3.3",
    "vitest": "^3.2.3"
  }
}
